-#encoding: utf-8
.row
  .col-lg-6
    %h1 Track管理
  .col-lg-6{style: "margin-top:25px;"}
    %a.btn.btn-default.right{href: "/account/tracks/new"} 新建

.row{style: "margin-top: 5px; background: white;"}
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th 序号 
        %th 标题 
        %th 收件人 
        %th 开信 
        %th 链接
    %tbody
      - @tracks.each_with_index do |track, index|
        - id = "track_%d" % track.id
        %tr{id: id}
          %td= index + 1
          %td= track.subject
          %td= track.to
          %td= track.records.count
          %th= track.mid
