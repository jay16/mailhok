-#encoding: utf-8
.row
  .col-lg-6
    %h1 套餐管理
  .col-lg-6{style: "margin-top:25px;"}
    %a.btn.btn-default.right{href: "/cpanel/packages/new"} 新建

.row{style: "margin-top: 5px; background: white;"}
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th 名称
        %th 价格
        %th 使用期限
        %th 状态
        %th 操作
    %tbody
      - @packages.each_with_index do |package, index|
        - id = "package_%d" % package.id
        %tr{id: id}
          %td= package.name
          %td= "￥%d" % package.price
          %td
            = package.num
            x
            .label.label-primary= package.unit
          %td= package.onsale ? "在售" : "未售"
          %td
            %a{href: "/cpanel/packages/%d/edit" % package.id} 编辑
            %button.btn.btn-link{onclick: "Sinatra.deleteWithAjax('/cpanel/packages/%d','#%s');" % [package.id, id]} 删除
